<h1>Your Cart</h1>

<% if @cart.empty? %>
  <p>Your cart is empty.</p>
  <%= link_to "Continue Shopping", products_path, class: "btn btn-secondary" %>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th style="width: 120px;">Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cart.each do |product_id, quantity| %>
        <% product = Product.find(product_id) %>

        <tr>
          <td><%= product.name %></td>

          <td>
            <%= form_with url: update_cart_path(product.id), method: :post, local: true do %>
              <input type="number" name="quantity" value="<%= quantity %>" min="1" class="form-control" />
              <%= submit_tag "Update", class: "btn btn-sm btn-outline-primary mt-1" %>
            <% end %>
          </td>

          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * quantity) %></td>

          <td>
            <%= button_to "Remove", remove_cart_path(product.id), method: :post,
                  class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Proceed to Checkout", new_order_path, class: "btn btn-success" %>
<% end %>
